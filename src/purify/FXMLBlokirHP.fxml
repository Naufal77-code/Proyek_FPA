<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" stylesheets="@purify-theme.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLBlokirHPController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="header-label" text="Purify" />
      <VBox alignment="CENTER" prefHeight="200.0" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #C8E6C9; -fx-border-radius: 15;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Durasi blokir:" />
                  <TextField fx:id="durasiField" promptText="Masukkan durasi" />
                  <ComboBox fx:id="satuanWaktuComboBox" prefWidth="100.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Kode darurat:" />
                  <TextField fx:id="kodeDaruratField" prefWidth="265.0" promptText="Kode untuk membatalkan" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Aktivitas:" />
                  <TextField fx:id="aktivitasField" prefWidth="265.0" promptText="Aktivitas pengganti (opsional)" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="btnMainMenu" mnemonicParsing="false" onAction="#handleMainMenu" styleClass="secondary-button" text="Kembali" />
            <Button fx:id="btnBlokir" mnemonicParsing="false" onAction="#handleBlokir" text="Mulai Blokir" />
         </children>
      </HBox>
   </children>
</VBox>