<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="301.0" prefWidth="354.0" spacing="20.0" stylesheets="@purify-theme.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLBlokirStatusController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="header-label" text="WAKTU TERSISA" />
      <Label fx:id="timerLabel" prefHeight="42.0" prefWidth="54.0" text="00:00:00" textFill="#4CAF50">
         <font>
            <Font name="Consolas Bold" size="96.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Masukkan Kode Darurat untuk Membatalkan" />
            <TextField fx:id="kodeDaruratField" alignment="CENTER" maxWidth="200.0" promptText="Kode Darurat" />
            <Button fx:id="btnBatalkan" mnemonicParsing="false" onAction="#handleBatalkan" styleClass="delete-button" text="Batalkan Blokir" />
         </children>
      </VBox>
   </children>
</VBox>
