<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="200.0" prefWidth="400.0" styleClass="popup-dialog" stylesheets="@purify-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLKomentarController">
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="popup-header" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="headerLabel" text="Beri Komentar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <TextArea fx:id="komentarArea" promptText="Tulis komentar Anda di sini..." styleClass="popup-textarea" wrapText="true" />
         </content>
         <BorderPane.margin>
            <Insets left="15.0" right="15.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBatal" mnemonicParsing="false" onAction="#handleBatal" styleClass="secondary-button" text="Batal" />
            <Button fx:id="btnKirim" mnemonicParsing="false" onAction="#handleKirim" styleClass="primary-action-button" text="Post Comment" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>