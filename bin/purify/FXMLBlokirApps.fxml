<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="700.0" style="-fx-background-color: #E8F5E9;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLBlokirAppsController">
   <children>
      <VBox layoutX="25.0" layoutY="25.0" spacing="15.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
         <children>
            <Label styleClass="header-label" text="Blokir Aplikasi">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Durasi Blokir:" />
                        <TextField fx:id="durasiField" promptText="Contoh: 30" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Satuan Waktu:" />
                        <ComboBox fx:id="satuanWaktuComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Pilih Aplikasi untuk Diblokir:" />
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Aplikasi Tersedia:" />
                        <ListView fx:id="lvAplikasiTersedia" prefHeight="200.0" />
                        <Button fx:id="btnTambahLainnya" mnemonicParsing="false" onAction="#handleTambahAplikasiLain" styleClass="secondary-button" stylesheets="@purify-theme.css" text="Aplikasi Lain..." />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnPindahKanan" mnemonicParsing="false" onAction="#handlePindahKanan" styleClass="transfer-button" stylesheets="@purify-theme.css" text="&gt;" />
                        <Button fx:id="btnPindahSemuaKanan" mnemonicParsing="false" onAction="#handlePindahSemuaKanan" styleClass="transfer-button" stylesheets="@purify-theme.css" text="&gt;&gt;" />
                        <Button fx:id="btnPindahKiri" mnemonicParsing="false" onAction="#handlePindahKiri" styleClass="transfer-button" stylesheets="@purify-theme.css" text="&lt;" />
                        <Button fx:id="btnPindahSemuaKiri" mnemonicParsing="false" onAction="#handlePindahSemuaKiri" styleClass="transfer-button" stylesheets="@purify-theme.css" text="&lt;&lt;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Aplikasi Akan Diblokir:" />
                        <ListView fx:id="lvAplikasiDipilih" prefHeight="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Aktivitas Selama Detoks (Opsional):" />
                  <TextField fx:id="aktivitasField" promptText="Contoh: Belajar, membaca buku" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Kode Darurat (untuk membatalkan):" />
                  <TextField fx:id="kodeDaruratField" promptText="Buat kode yang mudah diingat" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnMainMenu" mnemonicParsing="false" onAction="#handleMainMenu" styleClass="secondary-button" stylesheets="@purify-theme.css" text="Kembali ke Menu Utama" />
                  <Button fx:id="btnBlokir" mnemonicParsing="false" onAction="#handleBlokir" stylesheets="@purify-theme.css" text="Mulai Blokir" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>