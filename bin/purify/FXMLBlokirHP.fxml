<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLBlokirHPController">
    <children>
        <Label layoutX="350.0" layoutY="20.0" prefHeight="66.0" prefWidth="141.0" text="BLOKIR HP" textAlignment="CENTER">
            <font>
                <Font name="Calibri Bold" size="31.0" />
            </font>
        </Label>
        
        <Text layoutX="50.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Durasi blokir (menit):" />
        <TextField fx:id="durasiField" layoutX="200.0" layoutY="100.0" prefWidth="150.0" />
        
        <Text layoutX="50.0" layoutY="170.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Kode darurat:" />
        <TextField fx:id="kodeDaruratField" layoutX="200.0" layoutY="150.0" prefWidth="150.0" />
        
        <Text layoutX="50.0" layoutY="220.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Aktivitas:" />
        <TextField fx:id="aktivitasField" layoutX="200.0" layoutY="200.0" prefWidth="400.0" />
        
        <Button fx:id="btnBlokir" layoutX="350.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleBlokir" prefHeight="40.0" prefWidth="100.0" text="Blokir" />
        <Button fx:id="btnStatistik" layoutX="350.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleStatistik" prefHeight="40.0" prefWidth="100.0" text="Statistik" />
    </children>
</AnchorPane>
