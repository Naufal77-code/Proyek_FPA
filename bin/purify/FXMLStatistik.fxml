<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="purify.FXMLStatistikController">
   <children>
      <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="720.0" spacing="15.0">
         <Label text="STATISTIK DIGITAL DETOX" textAlignment="CENTER">
            <font>
               <Font name="Calibri Bold" size="24.0" />
            </font>
            <VBox.margin>
               <Insets left="20.0" top="10.0" />
            </VBox.margin>
         </Label>
         
         <HBox alignment="CENTER" spacing="10.0">
            <Label text="Tampilkan per:" />
            <ComboBox fx:id="periodeComboBox" prefWidth="150.0" />
         </HBox>
         
         <BarChart fx:id="durasiChart" animated="false" prefHeight="250.0" prefWidth="800.0">
            <xAxis>
               <CategoryAxis label="Periode" />
            </xAxis>
            <yAxis>
               <NumberAxis label="Durasi (menit)" />
            </yAxis>
         </BarChart>
         
         <TableView fx:id="riwayatTable" prefHeight="300.0" prefWidth="800.0">
            <columns>
               <TableColumn fx:id="colNomor" prefWidth="50.0" text="No" />
               <TableColumn fx:id="colTanggal" prefWidth="233.0" text="Waktu Mulai" />
               <TableColumn fx:id="colDurasi" prefWidth="145.0" text="Durasi (menit)" />
               <TableColumn fx:id="colStatus" prefWidth="145.0" text="Status" />
               <TableColumn fx:id="colAktivitas" prefWidth="146.0" text="Aktivitas" />
            </columns>
         </TableView>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Nomor Riwayat:" />
            <TextField fx:id="nomorField" prefWidth="50.0" />
            <Label text="Aktivitas Baru:" />
            <TextField fx:id="aktivitasBaruField" prefWidth="300.0" />
            <Button fx:id="btnEdit" mnemonicParsing="false" prefHeight="25.0" prefWidth="128.0" text="Edit Aktivitas" />
            <padding>
               <Insets left="20.0" />
            </padding>
         </HBox>
         
         <Button fx:id="btnKembali" mnemonicParsing="false" prefWidth="120.0" text="Kembali">
            <VBox.margin>
               <Insets bottom="10.0" left="300.0" />
            </VBox.margin></Button>
      </VBox>
   </children>
</AnchorPane>
